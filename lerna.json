{
  "version": "1.0.1",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "release"
    },
    "publish": {
      "ignoreChanges": [
        "**/tests/**",
        "**/*.test.js"
      ],
      "message": "chore: publish new version: %v"
    }
  },
  "useWorkspaces": true,
  "packages": [
    "packages/core/*",
    "packages/ui/*",
    "packages/native/*"
  ]
}
