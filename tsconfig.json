{
    "compilerOptions": {
        "target": "esnext",
        "module": "system",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "moduleResolution": "node",
//        "resolveJsonModule": true,
        "allowJs": true,
        "noImplicitAny": true,
//        "noImplicitThis": true,
        "strictNullChecks": true,
        "types": [],
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["packages/*"]
        }
//        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "packages/**/types/*.ts",
        "packages/**/types/*.tsx"
    ],
    "exclude": [
    ]
}
