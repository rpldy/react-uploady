{
  "name": "@rpldy/root",
  "version": "1.0.0",
  "scripts": {
    "upgradep": "node scripts/upgradeDep.js",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "coverage": "codecov",
    "bundle": "rimraf bundle; node scripts/bundle.js --validate --out bundle",
    "bundle:prod": "NODE_ENV=production yarn bundle",
    "bundle:serve": "http-server ./bundle -p 8009",
    "bundle:serve:ci": "echo TMP BUILD DIR ------; ls /tmp/build -ll; echo DIR BUNDLE -------; ls /tmp/build/bundle -ll; http-server /tmp/build/bundle -p 8009",
    "build": "lerna exec --stream -- FORCE_COLOR=1 NODE_ENV=production yarn build;",
    "clean": "rimraf bundle; lerna exec --stream -- rimraf lib umd",
    "release": "yarn bootstrap; yarn clean; yarn build; yarn bundle:prod; yarn flow:copy; lerna publish",
    "release:force": "yarn release --force-publish=*",
    "sb:start": "start-storybook -p 9111 --ci",
    "sb:build": "build-storybook -c .storybook -o .sb-static",
    "sb:bw": "yarn sb:build --watch",
    "sb:serve": "http-server ./.sb-static -p 8001",
    "start": "yarn sb:start",
    "jest": "NODE_ENV=test jest",
    "jest:cov": "yarn jest --coverage",
    "jest:ci": "yarn jest:cov --ci --runInBand --reporters='default' --reporters='jest-junit' ",
    "flow:mono": "flow-mono create-symlinks ./.flowconfig",
    "flow": "yarn flow:mono; flow --show-all-errors",
    "flow:copy": "lerna exec --stream -- yarn flow:copy",
    "lint": "eslint ./packages",
    "ensureTypes": "node scripts/ensureTypes.js",
    "types": "yarn ensureTypes && tsc --outDir ./tstest",
    "test": "yarn flow && yarn lint && yarn jest:cov && yarn types",
    "test:ci": "yarn flow && yarn lint && yarn jest:ci && yarn types",
    "cy:deps:serve": "concurrently --kill-others \"yarn sb:serve\" \"yarn bundle:serve\"",
    "cy:open": "CYPRESS_SB_PORT=9111 cypress open",
    "cy:open:build": "CYPRESS_SB_PORT=8001 cypress open",
    "cy:run": "wait-on http://localhost:9111 -d 1000 && CYPRESS_SB_PORT=9111 cypress run",
    "cy:run:build": "CYPRESS_SB_PORT=8001 cypress run",
    "cy:run:ff": "yarn cy:run --browser firefox",
    "e2e": "concurrently --success first --kill-others \"yarn bundle:serve\" \"yarn sb:start\" \"yarn cy:run\"",
    "server": "cd server; PORT=4000 node index.js",
    "tus": "cd server; DEBUG=tus-node-server* PORT=4000 node tus.js"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/ui/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rpldy/react-uploady"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-flow": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "@babel/runtime-corejs3": "^7.10.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-storysource": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "bundlesize": "^0.18.0",
    "bytes": "^3.1.0",
    "chalk": "^3.0.0",
    "codecov": "^3.6.5",
    "concurrently": "^5.1.0",
    "core-js": "^3.6.5",
    "cypress": "^4.7.0",
    "cypress-file-upload": "3.5.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.2.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "fast-glob": "^3.2.2",
    "flow-bin": "^0.126.1",
    "flow-copy-source": "^2.0.9",
    "flow-mono-cli": "^1.5.0",
    "fs-extra": "^9.0.0",
    "http-server": "^0.12.1",
    "husky": "^4.2.3",
    "jest": "^26.0.1",
    "jest-enzyme": "^7.1.2",
    "jest-junit": "^10.0.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.22.0",
    "license-webpack-plugin": "^2.1.4",
    "lodash": "^4.17.15",
    "pacote": "^11.1.4",
    "rc-progress": "^2.5.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-load-script": "^0.0.6",
    "regenerator-runtime": "^0.13.5",
    "rimraf": "^3.0.0",
    "semver-utils": "^1.1.4",
    "shelljs": "^0.8.3",
    "storybook-readme": "^5.0.8",
    "storybook-styled-components": "^1.1.4",
    "styled-components": "^5.1.1",
    "typescript": "^3.9.5",
    "virtual-module-webpack-plugin": "^0.4.1",
    "wait-on": "^4.0.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "yargs": "^15.3.1"
  },
  "optionalDependencies": {
    "fsevents": "^2.1.2"
  }
}
