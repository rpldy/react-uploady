{
  "name": "@rpldy/root",
  "version": "1.0.0",
  "author": "yoav niran (https://github.com/yoavniran)",
  "scripts": {
    "upgradep": "node scripts/upgradeDep.js",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "bootstrap:pure": "lerna bootstrap --use-workspaces -- --pure-lockfile",
    "coverage": "codecov",
    "bundle": "rimraf bundle; node scripts/bundle.js --validate",
    "bundle:prod": "UPLOADY_BUNDLE=true NODE_ENV=production yarn bundle",
    "bundle:serve": "http-server ./bundle -p 8009",
    "build": "lerna exec --stream -- FORCE_COLOR=1 NODE_ENV=production yarn build;",
    "clean": "rimraf bundle; lerna exec --stream -- rimraf lib umd",
    "release:normal": "yarn bootstrap; yarn clean; node scripts/release.js",
    "release": "yarn release:normal --versionArgs=\"--force-publish=*\" ",
    "release:alpha": "yarn release:normal --publishArgs=\"--dist-tag alpha\" ",
    "sb:start": "SB_INTERNAL=true start-storybook --modern -p 9111 --ci",
    "sb:build": "build-storybook -c .storybook -o .sb-static --modern",
    "sb:build:prod": "SB_OPTIMIZE=true yarn sb:build",
    "sb:build:internal": "SB_INTERNAL=true yarn sb:build:prod",
    "sb:bw": "yarn sb:build --watch",
    "sb:serve": "http-server ./.sb-static -p 8001",
    "start": "yarn sb:start",
    "jest": "NODE_ENV=test jest --maxWorkers=25%",
    "jest:cov": "yarn jest --coverage",
    "flow:mono": "flow-mono create-symlinks ./.flowconfig",
    "flow": "yarn flow:mono; flow --show-all-errors",
    "flow:copy": "lerna exec --stream -- yarn flow:copy",
    "lint": "eslint ./packages --cache",
    "lint:nocache": "eslint ./packages",
    "ensureTypes": "node scripts/ensureTypes.js",
    "types": "yarn ensureTypes && tsc --outDir ./tstest",
    "test": "yarn flow && yarn lint && yarn jest:cov && yarn types",
    "ci-flow": "yarn flow",
    "ci-lint": "yarn lint:nocache",
    "ci-jest": "NODE_ENV=test jest --coverage --ci --runInBand --reporters='default' --reporters='jest-junit'",
    "ci-types": "yarn types",
    "test:ci": "concurrently -s all --kill-others-on-fail \"yarn:ci-* \"",
    "deps:serve": "concurrently --kill-others \"yarn sb:serve\" \"yarn bundle:serve\"",
    "cy:open": "CYPRESS_SB_PORT=9111 cypress open",
    "cy:open:build": "CYPRESS_SB_PORT=8001 cypress open",
    "cy:run": "wait-on http://localhost:9111 -d 1000 && CYPRESS_SB_PORT=9111 cypress run",
    "cy:run:build": "CYPRESS_SB_PORT=8001 cypress run",
    "cy:run:ci": "wait-on http://localhost:8001 -d 1000 && CYPRESS_SB_PORT=8001 cypress run --record false --reporter mocha-multi-reporters --reporter-options configFile=\"cypress/reporters-config.json\"",
    "cy:run:ff": "yarn cy:run --browser firefox",
    "e2e:ci": "concurrently --success last --kill-others \"yarn bundle:serve\" \"yarn sb:serve\" \"yarn cy:run:ci\"",
    "server": "cd server; PORT=4000 node index.js",
    "tus": "cd server; DEBUG=tus-node-server* PORT=4000 node tus.js"
  },
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/core/*",
    "packages/ui/*",
    "packages/native/*"
  ],
  "homepage": "https://react-uploady.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/rpldy/react-uploady"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/react-uploady"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-proposal-export-default-from": "^7.16.0",
    "@babel/plugin-proposal-function-bind": "^7.16.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.0",
    "@babel/plugin-proposal-optional-chaining": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-flow": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/runtime-corejs3": "^7.16.3",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@commitlint/config-lerna-scopes": "^14.0.0",
    "@storybook/addon-actions": "^6.4.18",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-storysource": "^6.4.18",
    "@storybook/builder-webpack5": "^6.4.18",
    "@storybook/manager-webpack5": "^6.4.18",
    "@storybook/react": "^6.4.18",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "async": "^3.2.3",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-minify-dead-code-elimination": "^0.5.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "bundlesize": "^0.18.1",
    "bytes": "^3.1.0",
    "chalk": "^4.1.2",
    "codecov": "^3.8.3",
    "concurrently": "^6.3.0",
    "core-js": "^3.19.1",
    "cypress": "^9.2.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-intercept-formdata": "^0.3.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-async": "^1.0.1",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.6",
    "fast-glob": "^3.2.7",
    "flow-bin": "^0.169.0",
    "flow-copy-source": "^2.0.9",
    "flow-mono-cli": "^1.5.3",
    "fs-extra": "^10.0.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.0.0",
    "husky": "^7.0.0",
