    "markdown-it": "^12.3.2",
    "mocha-junit-reporter": "^2.0.2",
    "mocha-multi-reporters": "^1.5.1",
    "octokit-plugin-create-pull-request": "^3.10.0",
    "pacote": "^12.0.2",
    "rc-progress": "^3.1.4",
    "react": "^17.0.2",
    "react-dnd-html5-backend": "^14.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-load-script": "^0.0.6",
    "rimraf": "^3.0.2",
    "semver-utils": "^1.1.4",
    "shelljs": "^0.8.4",
    "styled-components": "^5.3.3",
    "typescript": "^3.9.5",
    "wait-on": "^6.0.0",
    "weak-napi": "^2.0.2",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "webpack-virtual-modules": "^0.4.3",
    "xml2js": "^0.4.23",
    "yargs": "^17.2.1"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
