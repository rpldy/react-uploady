{
  "version": "0.4.1",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "release"
    },
    "publish": {
      "ignoreChanges": [
        "**/tests/**",
        "**/*.test.js"
      ],
      "message": "chore: publish new version"
    }
  },
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "packages/ui/*"
  ]
}
