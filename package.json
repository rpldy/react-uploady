{
  "name": "@rpldy/root",
  "version": "1.0.0",
  "scripts": {
    "upgradep": "node scripts/upgradeDep.js",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "coverage": "codecov",
    "bundle": "rimraf bundle; node scripts/bundle.js --validate --out bundle",
    "bundle:prod": "NODE_ENV=production yarn bundle",
    "build": "lerna exec --stream -- FORCE_COLOR=1 NODE_ENV=production yarn build;",
    "clean": "rimraf bundle; lerna exec --stream -- rimraf lib umd",
    "release": "yarn bootstrap; yarn clean; yarn build; yarn bundle:prod; yarn flow:copy",
    "ssb": "start-storybook -p 9111 --ci",
    "bsb": "build-storybook -c .storybook -o .sb-static",
    "bsbw": "yarn bsb --watch",
    "sb:serve": "cd .sb-static; http-server",
    "start": "yarn ssb",
    "jest": "NODE_ENV=test jest",
    "jest:cov": "yarn jest --coverage",
    "jest:ci": "yarn jest:cov --ci --runInBand --reporters='default' --reporters='jest-junit' ",
    "flow:mono": "flow-mono create-symlinks ./.flowconfig",
    "flow": "yarn flow:mono; flow --show-all-errors",
    "flow:copy": "lerna exec --stream -- yarn flow:copy",
    "lint": "eslint ./packages",
    "test": "yarn flow && yarn lint && yarn jest:cov",
    "test:ci": "yarn flow && yarn lint && yarn jest:ci",
    "server": "cd server; PORT=4000 node index.js"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/ui/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yoavniran/react-uploady"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.7.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "bundlesize": "^0.18.0",
    "bytes": "^3.1.0",
    "chalk": "^3.0.0",
    "codecov": "^3.6.5",
    "core-js": "^3.6.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-import-resolver-webpack": "^0.12.0",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "fast-glob": "^3.2.2",
    "flow-bin": "^0.121.0",
    "flow-copy-source": "^2.0.9",
    "flow-mono-cli": "^1.5.0",
    "fs-extra": "^9.0.0",
    "http-server": "^0.12.1",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "jest-enzyme": "^7.1.2",
    "jest-junit": "^10.0.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.20.2",
    "license-webpack-plugin": "^2.1.4",
    "lodash": "^4.17.15",
    "pacote": "^11.1.4",
    "rc-progress": "^2.5.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "regenerator-runtime": "^0.13.5",
